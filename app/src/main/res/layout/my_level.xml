<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="38dp"
    android:paddingEnd="38dp">

    <ImageView
        android:id="@+id/iv_level_donedone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_donedone_2"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_level_left_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:text="LV.5ê¹Œì§€ NNê°œ Doneì´ ë‚¨ì•˜ì–´ìš”! í™”ì´íŒ… ðŸ‘ðŸ»"
        style="@style/my_done_mini_text"
        android:padding="6dp"
        android:gravity="center"
        android:background="@drawable/my_level_round_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_level_donedone"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/pb_level"
        android:layout_width="0dp"
        android:layout_height="9dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/my_progress_bar"
        android:max="100"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_level_left_detail"
        app:layout_constraintStart_toStartOf="@id/tv_level_left_detail"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_level_progress_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        style="@style/my_level_indicator_text"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/pb_level"
        app:layout_constraintStart_toStartOf="@id/pb_level"/>

    <TextView
        android:id="@+id/tv_level_progress_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        style="@style/my_level_indicator_text"
        app:layout_constraintTop_toTopOf="@id/tv_level_progress_start"
        app:layout_constraintEnd_toEndOf="@id/pb_level"/>

</androidx.constraintlayout.widget.ConstraintLayout>